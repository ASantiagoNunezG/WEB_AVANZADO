<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">NUEVO PRODUCTO</h3>
                </div>
                
                <div class="card-body">
                    <form action="/agregar-producto" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre"
                            >
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Descripción"
                            >
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" name="precio" id="precio" placeholder="Precio"
                            >
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Stock</label>
                            <input class="form-control" type="text" name="stock" id="stock" placeholder="Stock"
                            >
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Categoría</label>
                            <input class="form-control" type="text" name="categoria" id="categoria" placeholder="Categoría"
                            >
                        </div>
                    
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" href="/agregar-producto"> Guardar</button>
                            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page"
                                    href="/lista-productos"> Cancelar</a></button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>

